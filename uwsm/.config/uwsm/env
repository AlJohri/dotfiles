# Changes require a restart to take effect.

# Ensure Omarchy bins are in the path
export OMARCHY_PATH=$HOME/.local/share/omarchy
export PATH=$OMARCHY_PATH/bin:$PATH

# Set default terminal and editor
source ~/.config/uwsm/default

# Add mise shims to PATH for non-interactive processes (waybar, etc.)
# Interactive shells run `mise activate` which removes shims and uses dynamic PATH
# See: https://mise.jdx.dev/dev-tools/shims.html
eval "$(mise activate --shims bash)"
