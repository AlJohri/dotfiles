#!/usr/bin/env bash

set -euo pipefail

for dir in */; do
    if [[ -d "${dir}.git" ]]; then
        echo "Pulling ${dir%/}..."
        if git -C "$dir" pull; then
            echo -e "\033[32m✓ ${dir%/} succeeded\033[0m"
        else
            echo -e "\033[31m✗ ${dir%/} failed\033[0m"
        fi
    fi
done
